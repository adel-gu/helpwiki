<div
  tabindex="-1"
  class="dropdown-content menu absolute bottom-2 left-14 w-64 origin-bottom-left rounded-lg border border-gray-200 bg-white shadow-lg"
>
  <div class="flex flex-col p-2">
    <!-- Menu Header -->
    <div class="px-2 py-2">
      <p class="truncate text-sm font-bold text-gray-900"><%= current_user.full_name %></p>
      <p class="truncate text-sm text-gray-500"><%= current_user.email %></p>
    </div>

    <!-- Divider -->
    <div class="my-1 h-px bg-gray-200"></div>

    <!-- Menu Items -->
    <div class="flex flex-col">
      <%= link_to "#",
        class: "group flex items-center gap-3 rounded-md px-2 py-2 text-sm transition-colors hover:bg-gray-50" do %>
        <span class="material-symbols-outlined text-lg text-gray-500">account_circle</span>
        <span class="text-gray-900">My Profile</span>
      <% end %>

      <%= link_to destroy_user_session_path,
        data: { turbo_method: :delete },
        class: "group flex items-center gap-3 rounded-md px-2 py-2 text-sm transition-colors hover:bg-gray-50" do %>
        <span class="material-symbols-outlined text-lg text-gray-500 group-hover:text-red-500">logout</span>
        <span class="text-gray-900 group-hover:text-red-500">Logout</span>
      <% end %>
    </div>
  </div>
</div>

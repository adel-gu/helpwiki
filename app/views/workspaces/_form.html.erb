<%= form_with(model: workspace, url: workspace_url) do |form| %>
  <% if workspace.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(workspace.errors.count, "error") %> prohibited this workspace from being saved:</h2>

      <ul>
        <% workspace.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <!-- Workspace Name -->
    <label class="flex flex-col">
      <p class="text-base-content text-sm font-medium pb-2">Workspace Name</p>
      <%= form.text_field :name,
        autofocus: true,
        class: "flex w-full rounded-lg border border-base-300 bg-white p-[15px] text-base text-base-content placeholder-secondary focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/20",
        placeholder: "e.g. Acme Corporation" %>
    </label>

    <!-- Workspace subdomain -->
    <label class="flex flex-col">
      <p class="text-base-content text-sm font-medium pb-2">Subdomain</p>
      <%= form.text_field :subdomain,
        class: "flex w-full rounded-lg border border-base-300 bg-white p-[15px] text-base text-base-content placeholder-secondary focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/20",
        placeholder: "e.g. acme" %>
    </label>

    <!-- Submit -->
    <%= form.submit "Create Workspace",
      class: "flex h-11 w-full items-center justify-center gap-2 rounded-lg bg-primary px-4 text-base font-semibold text-white hover:bg-[#2563EB] focus:outline-none focus:ring-2 focus:ring-primary/50 focus:ring-offset-2 cursor-pointer" %>
  </div>
<% end %>
